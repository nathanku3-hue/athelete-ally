{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://athlete-ally.dev/schemas/normalized/sleep.v1.json",
  "title": "Normalized Sleep v1",
  "type": "object",
  "$defs": {
    "metadata": {
      "type": "object",
      "properties": {
        "version": { "type": "string", "const": "v1" },
        "domain": { "type": "string" },
        "user_id": { "type": "string", "minLength": 1 },
        "received_at": { "type": "string", "format": "date-time" },
        "source": {
          "type": "object",
          "properties": {
            "provider": { "type": "string" },
            "event_id": { "type": "string" },
            "delivery_id": { "type": "string" }
          },
          "required": ["provider"],
          "additionalProperties": true
        }
      },
      "required": ["version", "domain", "user_id", "received_at", "source"],
      "additionalProperties": false
    }
  },
  "properties": {
    "version": { "type": "string", "const": "v1" },
    "domain": { "type": "string", "const": "sleep" },
    "user_id": { "type": "string" },
    "received_at": { "type": "string", "format": "date-time" },
    "source": { "$ref": "#/$defs/metadata/properties/source" },
    "session_id": { "type": "string" },
    "start_time": { "type": "string", "format": "date-time" },
    "end_time": { "type": "string", "format": "date-time" },
    "metrics": {
      "type": "object",
      "properties": {
        "total_duration_sec": { "type": "integer", "minimum": 0 },
        "efficiency_pct": { "type": "number", "minimum": 0, "maximum": 100 },
        "latency_sec": { "type": "integer", "minimum": 0 },
        "awakenings": { "type": "integer", "minimum": 0 },
        "score": { "type": "number", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "stages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "stage": { "type": "string", "enum": ["awake", "light", "deep", "rem"] },
          "start_time": { "type": "string", "format": "date-time" },
          "end_time": { "type": "string", "format": "date-time" },
          "duration_sec": { "type": "integer", "minimum": 0 }
        },
        "required": ["stage", "start_time", "end_time", "duration_sec"],
        "additionalProperties": false
      }
    }
  },
  "required": ["version", "domain", "user_id", "received_at", "source", "session_id", "start_time", "end_time"],
  "additionalProperties": false
}
