{
  "extends": "../../config/typescript/tsconfig.base.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "../..",
    "moduleResolution": "node",
    "paths": {
      // Packages that point to src (no build required) - explicit index.js for ESM
      "@athlete-ally/database-utils": ["./packages/database-utils/src/index.js"],
      "@athlete-ally/event-bus": ["./packages/event-bus/src/index.js"],
      "@athlete-ally/event-bus/*": ["./packages/event-bus/src/*"],
      "@athlete-ally/contracts": ["./packages/contracts/index.js"],
      "@athlete-ally/contracts/*": ["./packages/contracts/*"],
      "@athlete-ally/contracts/events": ["./packages/contracts/events/index.js"],
      "@athlete-ally/contracts/events/*": ["./packages/contracts/events/*"],
      "@athlete-ally/protocol-types": ["./packages/protocol-types/src/index.js"],
      "@athlete-ally/protocol-types/*": ["./packages/protocol-types/src/*"],
      // Packages that point to dist (built dependencies) - explicit .js for ESM
      "@athlete-ally/logger": ["./packages/logger/dist/index.js"],
      "@athlete-ally/logger/server": ["./packages/logger/dist/adapters/node.js"],
      "@athlete-ally/logger/browser": ["./packages/logger/dist/adapters/browser.js"],
      "@athlete-ally/shared": ["./packages/shared/dist/index.js"],
      "@athlete-ally/shared/*": ["./packages/shared/dist/*"],
      "@athlete-ally/shared-types": ["./packages/shared-types/dist/index.js"],
      "@athlete-ally/shared-types/*": ["./packages/shared-types/dist/*"]
    }
  },
  "include": ["src/**/*", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "**/__tests__/**", "prisma/**"]
}


