{
  "dashboard": {
    "id": null,
    "title": "Athlete Ally - Advanced Planning Engine Dashboard",
    "tags": ["athlete-ally", "planning-engine", "microservices", "production"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "üöÄ Service Health Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"planning-engine\"}",
            "legendFormat": "Planning Engine"
          },
          {
            "expr": "up{job=\"prometheus\"}",
            "legendFormat": "Prometheus"
          },
          {
            "expr": "up{job=\"grafana\"}",
            "legendFormat": "Grafana"
          },
          {
            "expr": "up{job=\"postgres\"}",
            "legendFormat": "PostgreSQL"
          },
          {
            "expr": "up{job=\"redis\"}",
            "legendFormat": "Redis"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            },
            "mappings": [
              {
                "type": "value",
                "value": "0",
                "text": "DOWN"
              },
              {
                "type": "value",
                "value": "1",
                "text": "UP"
              }
            ]
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "‚ö° API Response Time (ms)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"planning-engine\"}[5m])) * 1000",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"planning-engine\"}[5m])) * 1000",
            "legendFormat": "50th percentile"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=\"planning-engine\"}[5m])) * 1000",
            "legendFormat": "99th percentile"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (ms)",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 3,
        "title": "üìä Request Rate (req/s)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"planning-engine\"}[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests per second",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "‚ùå Error Rate (%)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"planning-engine\",status=~\"5..\"}[5m]) / rate(http_requests_total{job=\"planning-engine\"}[5m]) * 100",
            "legendFormat": "5xx errors"
          },
          {
            "expr": "rate(http_requests_total{job=\"planning-engine\",status=~\"4..\"}[5m]) / rate(http_requests_total{job=\"planning-engine\"}[5m]) * 100",
            "legendFormat": "4xx errors"
          }
        ],
        "yAxes": [
          {
            "label": "Error Rate (%)",
            "min": 0,
            "max": 10
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "üíª System Resources",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"planning-engine\"}[5m]) * 100",
            "legendFormat": "CPU Usage %"
          },
          {
            "expr": "process_resident_memory_bytes{job=\"planning-engine\"} / 1024 / 1024",
            "legendFormat": "Memory Usage (MB)"
          }
        ],
        "yAxes": [
          {
            "label": "Usage",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "üóÑÔ∏è Database Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(pg_stat_database_tup_returned{job=\"postgres\"}[5m])",
            "legendFormat": "Tuples Returned/s"
          },
          {
            "expr": "rate(pg_stat_database_tup_fetched{job=\"postgres\"}[5m])",
            "legendFormat": "Tuples Fetched/s"
          }
        ],
        "yAxes": [
          {
            "label": "Database Operations/s",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 7,
        "title": "‚ö° Cache Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(redis_commands_processed_total{job=\"redis\"}[5m])",
            "legendFormat": "Commands/s"
          },
          {
            "expr": "redis_connected_clients{job=\"redis\"}",
            "legendFormat": "Connected Clients"
          }
        ],
        "yAxes": [
          {
            "label": "Redis Metrics",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        }
      },
      {
        "id": 8,
        "title": "üìà Business Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "increase(planning_engine_plans_generated_total[5m])",
            "legendFormat": "Plans Generated"
          },
          {
            "expr": "increase(planning_engine_rpe_feedback_total[5m])",
            "legendFormat": "RPE Feedback"
          },
          {
            "expr": "increase(planning_engine_adaptations_applied_total[5m])",
            "legendFormat": "Adaptations Applied"
          }
        ],
        "yAxes": [
          {
            "label": "Business Events",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 32
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "enable": true,
          "iconColor": "blue",
          "type": "dashboard"
        }
      ]
    }
  }
}

