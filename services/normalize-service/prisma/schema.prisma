generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model HrvData {
  id         String   @id @default(cuid())
  userId     String
  date       DateTime @db.Date
  rmssd      Float?
  lnRmssd    Float?
  capturedAt DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, date])
  @@map("hrv_data")
}

model SleepData {
  id         String   @id @default(cuid())
  userId     String
  date       DateTime @db.Date
  totalSleep Int?
  deepSleep  Int?
  lightSleep Int?
  remSleep   Int?
  debtMin    Int?
  capturedAt DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, date])
  @@map("sleep_data")
}
