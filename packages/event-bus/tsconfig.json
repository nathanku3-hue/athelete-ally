{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "../../",
    "paths": {
      "@athlete-ally/contracts/*": [
        "packages/contracts/*"
      ],
      "@athlete-ally/contracts": [
        "packages/contracts"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../../packages/contracts/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts"
  ]
}
