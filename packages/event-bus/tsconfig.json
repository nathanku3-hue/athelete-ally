{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "../../",
    "paths": {
      "@athlete-ally/contracts": [
        "packages/contracts/src"
      ]
    },
    "composite": true,
    "incremental": true
  },
  "include": [
    "src/**/*",
    "../../packages/contracts/src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts"
  ],
  "references": [
    {
      "path": "../contracts"
    }
  ]
}
