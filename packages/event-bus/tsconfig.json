{
  "extends": "../../config/typescript/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "../../",
    "paths": {
      "@athlete-ally/contracts": ["packages/contracts"],
      "@athlete-ally/contracts/*": ["packages/contracts/*"],
      "@athlete-ally/contracts/events": ["packages/contracts/events"],
      "@athlete-ally/contracts/events/*": ["packages/contracts/events/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts"]
}
