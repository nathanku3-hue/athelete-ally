{
  "extends": "./tsconfig.json",
  "include": [
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@event-bus-test-utils/*": ["tests/test-utils/*"],
      "@athlete-ally/contracts": ["../contracts/events/index.ts"],
      "@athlete-ally/contracts/": ["../contracts/events/"]
    },
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  }
}
