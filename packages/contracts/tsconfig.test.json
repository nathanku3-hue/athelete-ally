{
  "extends": "./tsconfig.json",
  "include": [
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "events/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@contracts-test-utils/*": ["tests/test-utils/*"]
    },
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  }
}
