{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": [
      "jest",
      "node",
      "aws-lambda"
    ],
    "composite": true,
    "incremental": true
  },
  "include": [
    "events/**/*",
    "openapi.yaml"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "__tests__"
  ]
}
