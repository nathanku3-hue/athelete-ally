{
  "name": "@athlete-ally/contracts",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "events/index.ts",
  "exports": {
    ".": "./events/index.ts",
    "./events": "./events/index.ts"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:contracts": "jest --runInBand --verbose --no-cache --testPathPattern=contracts",
    "test:database": "jest --testPathPattern=database-models",
    "test:api": "jest --testPathPattern=api-endpoints",
    "test:integration": "jest --testPathPattern=integration",
    "test:performance": "jest --testPathPattern=performance",
    "test:coverage": "jest --coverage",
    "test:contracts:cov": "jest --coverage --coverageProvider=v8 --testPathPattern=contracts",
    "coverage:check": "jest --coverage --coverageThreshold.global.branches=90 --coverageThreshold.global.functions=90 --coverageThreshold.global.lines=90 --coverageThreshold.global.statements=90",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc -p tsconfig.test.json --noEmit"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/aws-lambda": "^8.10.122",
    "@types/jest": "^29.5.8",
    "@types/request": "^2.48.13",
    "@types/superagent": "^8.1.9",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.9.2"
  }
}
