# Normalize line endings for all text files
* text=auto

# Explicitly set line endings for specific file types
*.yml text eol=lf
*.yaml text eol=lf
*.sh text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.zip binary
*.tar.gz binary
*.tgz binary
*.rar binary
*.7z binary

# Package files
package-lock.json text eol=lf
yarn.lock text eol=lf
pnpm-lock.yaml text eol=lf

# Configuration files
*.config.js text eol=lf
*.config.ts text eol=lf
*.config.mjs text eol=lf
*.config.cjs text eol=lf
